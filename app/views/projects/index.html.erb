<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
      <h2>Projects</h2>
      <h5>All Projects Reimbursement Total: <%= number_to_currency(Project.process_all_sets) %></h5>
      <div class="table-responsive">
        <table class="table table-dark table-bordered mb-0">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">SET TOKEN</th>
              <th scope="col">COST TYPE</th>
              <th scope="col">START DATE</th>
              <th scope="col">END DATE</th>
              <th scope="col">SET TOTAL</th>
            </tr>
          </thead>
          <tbody>
            <% @projects.each do |project| %>
              <tr>
                <td><%= project.id %></td>
                <td><%= project.set_token %></td>
                <td><%= project.cost_type %></td>
                <td><%= project.start_date %></td>
                <td><%= project.end_date %></td>
                <td><%= number_to_currency(Project.process_set(project.set_token)) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
